<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ExpenseActivity"
    android:padding="@dimen/sp20"
    android:background="@color/color_light"
    android:scrollbars="none"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_marginTop="@dimen/sp20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_expenses"
            android:textSize="@dimen/sp18"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/sp18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vous avez dépensé 90000 Fc"
            />

        <androidx.recyclerview.widget.RecyclerView
            tools:itemCount="100"
            android:layout_marginBottom="@dimen/sp12"
            android:id="@+id/recyclerview_expense_action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
        <TextView
            android:layout_marginVertical="@dimen/sp20"
            android:layout_width="match_parent"
            android:layout_height="100sp"/>
    </LinearLayout>
</ScrollView>