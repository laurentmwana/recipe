<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_filter"
    android:layout_marginBottom="@dimen/sp12"
    android:padding="@dimen/sp12"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_marginBottom="@dimen/sp12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="@dimen/sp10"
            android:textColor="@color/black"
            android:textSize="@dimen/sp18"
            android:id="@+id/text_view_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="le 20 mai 2023"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="@dimen/sp12"
            android:id="@+id/text_view_created_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="@dimen/sp5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/button_delete"
            app:icon="@drawable/ic_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_delete"/>
        <Button
            android:layout_marginLeft="@dimen/sp12"
            android:layout_marginTop="@dimen/sp5"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/button_eye"
            app:icon="@drawable/ic_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_eye"/>
    </LinearLayout>
</LinearLayout>